<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:nestedScrollingEnabled="true"
    android:overScrollMode="ifContentScrolls"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/open_league_weekly_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/open_league_weekly_img"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/open_league_weekly_icon" />

        <TextView
            android:id="@+id/open_league_weekly_event_tittle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_gravity="clip_horizontal"
            android:text="Abierto Esta semana"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:layout_weight="9"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="8dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/open_league_weekly_list"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </LinearLayout>

<!--
        tools:context=".FragmentNewsFeed"
        tools:listitem="@layout/fragment_newsfeed"-->

    <LinearLayout
        android:id="@+id/open_league_recurrent_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/open_league_recurrent_img"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/open_league_recurrent_icon" />

        <TextView
            android:id="@+id/open_league_recurrent_event_tittle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_gravity="clip_horizontal"
            android:text="Siempre Abierto"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:layout_weight="9"/>


    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/open_league_recurrent_list"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />
        <!--
                tools:context=".FragmentNewsFeed"
                tools:listitem="@layout/fragment_newsfeed"-->

</LinearLayout>
</android.support.v4.widget.NestedScrollView>