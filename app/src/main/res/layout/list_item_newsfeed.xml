<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_newsfeed_cardView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardElevation="8dp"
    android:layout_marginTop="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/newsfeed_text_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:text="Equipos masculinos de Garrincha FC jugarÃ¡n en City FC y Media Cancha."
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/newsfeed_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/garrincha_newsfeed2" />

</android.support.v7.widget.CardView>
